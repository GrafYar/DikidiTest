<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="2dp"
    android:layout_marginTop="8dp"
    android:layout_marginRight="4dp"
    android:layout_marginLeft="4dp"
    app:cardBackgroundColor="@color/white"
    android:orientation="vertical"
    app:cardElevation="5dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <ru.dikidi.dikiditest.ui.views.AspectRatioImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop"
                android:src="@drawable/user_photo"
                app:aspect_ratio="1.51" />

            <TextView
                android:id="@+id/user_full_name_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@color/white"
                android:paddingLeft="@dimen/spacing_small_8"
                android:paddingRight="@dimen/spacing_small_8"
                android:paddingTop="@dimen/spacing_small_8"
                android:paddingBottom="@dimen/spacing_small_8"
                android:textSize="@dimen/font_small_14"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="Название"/>



            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:background="@color/light_grey"
                android:layout_gravity="bottom">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/icon"
                    android:layout_gravity="center_vertical"
                    android:paddingLeft="@dimen/spacing_small_8"/>

            </LinearLayout>



        </FrameLayout>

    </LinearLayout>

    </android.support.v7.widget.CardView>