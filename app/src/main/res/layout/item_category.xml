<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardView"
    android:layout_width="@dimen/layout_width_210"
    android:layout_height="@dimen/layout_height_115"
    android:layout_marginTop="@dimen/margin_medial_4"
    android:layout_marginRight="@dimen/margin_medial_4"
    android:layout_marginLeft="@dimen/margin_medial_4"
    android:layout_marginBottom="@dimen/margin_medial_4"
    android:background="@drawable/frame_corners"
    android:orientation="vertical"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@drawable/corners">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/category_image"
                android:scaleType="centerCrop"
                android:src="@drawable/hairdressing"
                android:background="@drawable/corners"/>

            <TextView
                android:id="@+id/category_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/spacing_small_8"
                android:paddingRight="@dimen/spacing_small_8"
                android:paddingTop="@dimen/spacing_small_8"
                android:paddingBottom="@dimen/spacing_small_8"
                android:textSize="@dimen/font_medium_20"
                android:textStyle="bold"
                android:textColor="@color/white"
                android:gravity="center"
                android:background="@color/fade_black"/>

        </FrameLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/layout_height_1"
            android:layout_marginTop="@dimen/margin_very_large_16"
            android:layout_marginBottom="@dimen/margin_medium_8"
            android:background="@color/light_grey"/>
    </LinearLayout>
</LinearLayout>

