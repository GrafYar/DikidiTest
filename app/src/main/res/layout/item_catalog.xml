<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
xmlns:app="http://schemas.android.com/apk/res-auto"
android:layout_marginStart="@dimen/spacing_normal_16"
android:layout_marginEnd="@dimen/spacing_normal_16"
android:layout_marginTop="@dimen/spacing_small_8"
android:layout_marginBottom="@dimen/spacing_small_8"
android:background="@drawable/corners"
app:cardCornerRadius="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="1dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:orientation="vertical"
                android:layout_weight="0.4">
                <ru.dikidi.dikiditest.ui.views.AspectRatioImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/catalog_image_thumb"
                    android:src="@drawable/icon"
                    app:aspect_ratio="1"/>
                <ru.dikidi.dikiditest.ui.views.AspectRatioImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:id="@+id/adv_image_thumb"
                    android:src="@drawable/icon"
                    app:aspect_ratio="1"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_marginLeft="@dimen/spacing_normal_16"
                android:background="@color/white"
                android:layout_weight="0.6">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/catalog_rating"
                    android:text="3.5"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/catalog_name"
                    android:text="Салон"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/catalog_street_house"
                    android:text="Улица, дом"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/catalog_categories"
                    android:text="Категории"/>

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/adv_button"
                    android:text="Реклама"/>

                </LinearLayout>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>