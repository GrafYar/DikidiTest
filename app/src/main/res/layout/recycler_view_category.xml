<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_55"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/category_recyclerview_title"
                android:textColor="@color/black"
                android:textSize="@dimen/font_medial_18"
                android:textStyle="bold" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/category_count_categories"
                android:textStyle="bold"
                android:textSize="@dimen/font_medial_18"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">
        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/category_recycler_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/margin_large_12"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_1"
        android:layout_marginTop="@dimen/margin_medium_8"
        android:background="@color/light_grey"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_10"
        android:background="@color/light_light_grey"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/layout_height_1"
        android:background="@color/light_grey"/>

</LinearLayout>