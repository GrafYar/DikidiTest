<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_gravity="bottom"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.35">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Каталог"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="18sp"
                android:gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.45">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/catalog_count_catalogs"
                android:text="99"
                android:textStyle="bold"
                android:textSize="18sp"
                android:gravity="center_vertical"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2">
            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/catalog_button_more"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:text="ЕЩЕ"
                android:textColor="@color/light_blue"
                android:gravity="center_vertical"/>

        </LinearLayout>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/catalog_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

<Button
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/catalog_button_all"
    android:textColor="@color/light_blue"
    android:layout_marginStart="@dimen/spacing_small_8"
    android:layout_marginTop="@dimen/spacing_small_8"
    android:layout_marginBottom="@dimen/spacing_small_8"
    android:layout_marginEnd="@dimen/spacing_small_8"
    android:layout_gravity="center"
    android:padding="4dp"
    android:text="ПОСМОТРЕТЬ ВСЕ"
    android:background="@drawable/frame_corners_blue_solid"/>

</LinearLayout>